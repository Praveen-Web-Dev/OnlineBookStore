@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-white bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.Id != 0 ? "Update" : "Create")Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Id" type="hidden" />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Name" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.Name" class="ms-2"></label>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.StreetAddress" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.StreetAddress" class="ms-2"></label>
                            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>

                        </div>
                       
                        <div class="form-floating mb-3 row p-1">
                            <input asp-for="@Model.City" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.City" class="ms-2"></label>
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 row p-1">
                            <input asp-for="@Model.State" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.State" class="ms-2"></label>
                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 row p-1">
                            <input asp-for="@Model.PostalCode" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.PostalCode" class="ms-2"></label>
                            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 row p-1">
                            <input asp-for="@Model.PhoneNumber" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        
                       

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary w-100 "> @(Model.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>


        </form>
    </div>
</div>







